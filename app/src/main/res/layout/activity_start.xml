<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.95"
    android:background="@drawable/_50582547_sporty_young_couple_with_dumbbells_on_black_background"
    android:orientation="vertical"
    tools:context=".views.activities.StartActivity">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:src="@drawable/logo2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/logo_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/facon"
        android:text="BUILD YOUR"
        android:textColor="@color/secondaryColor"
        android:textSize="50sp"
        android:transitionName="logo_text" />

    <TextView
        android:id="@+id/logo_nam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/facon"
        android:text="       MUSCLE"
        android:textColor="@color/primaryColor"
        android:textSize="50sp"
        android:transitionName="logo_text"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145dp">

    </RelativeLayout>

    <Button
        android:id="@+id/signupButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/primaryColor"
        android:rotationX="1"
        android:text="GET STARTED"
        android:fontFamily="@font/storeb"
        android:textColor="@color/secondaryColor"
        android:textSize="24sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp">

    </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/primaryColor"
        android:onClick="login"
        android:text="LOGIN"
        android:textColor="@color/secondaryColor"
        android:fontFamily="@font/storeb"
        android:textSize="24sp"

        />

</LinearLayout>